@model CompletedItemsViewModel

<div class="container mt-5">
    <h3>Completed Items:</h3>
    <br/>
    @if (Model.CompletedItems.Count == 0)
    {
        <div class="alert alert-danger mt-5">
            <h3 class="text-center">There are no completed items!!!</h3>
            <h4 class="text-center">Get to work!!!</h4>
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Category</td>
                    <td>Date Completed</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Item i in Model.CompletedItems)
                {
                    <tr>
                        <td>@i.Title</td>
                        <td>@Model.Categories.FirstOrDefault(c => c.Id == i.CategoryId).Name</td>
                        <td>@i.DateCompeted.Value.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

